#include <stdio.h>
int b[3]={0};
int main()
{
	int n, a[5000],i,j=0, min, k=0,l=0,c[1670],d[1670],e[1670];
	scanf("%d", &n);
	for(i=0;i<n;i++)
	scanf("%d", &a[i]);
	for(i=0;i<n;i++)
	b[a[i]-1]++;
	min=b[0];
	for(i=1;i<3;i++)
	if(b[i]<min)
	min=b[i];
	printf("%d\n", min);
	if(min>0)
	for(i=0;i<n;i++)
	{
		if(a[i]==1 && j<min)
		{
		c[j]=i+1;
		j++;
		}
		if(a[i]==2 && k<min)
		{
		d[k]=i+1;
		k++;
		}
		if(a[i]==3 && l<min)
		{
		e[l]=i+1;
		l++;
		}	
	}
	for(i=0;i<min;i++)
	printf("%d %d %d\n", c[i], d[i], e[i]);
	return 0;
}
