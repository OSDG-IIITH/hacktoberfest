#include<stdio.h>
int main()
{
	int n,m,a[100],i,j,temp,b[100],min;

	scanf("%d %d",&n,&m);
	for(i=0;i<m;i++)
	{
		scanf("%d",&a[i]);
	}
	for(i=0;i<m;i++)
	{
		for(j=0;j<m;j++)
		{
			if(a[i]<a[j])
			{
			temp=a[j];
			a[j]=a[i];
			a[i]=temp;
			}
		}
	}
	for(i=0;i<(m-n+1);i++)
	{
		b[i]=a[i+n-1]-a[i];
	}
	min=b[0];
	for(i=1;i<(m-n+1);i++)
	{
		if(min>b[i])
			min=b[i];
	}
	printf("%d",min);
	return 0;
}
